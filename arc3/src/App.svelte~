<script>
 let name = "";
 let displayedName = "";
 function onAdd() {
     displayedName = name;
 }
</script>

<main>
    <h1>Task Application</h1>

    <label for="name">Task name:</label>
    <input type="text" id="name" name="name" bind:value={name}/>
    <p>
        Task: {displayedName}
    </p>
</main>

