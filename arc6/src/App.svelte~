<script>
 export let appName;
 import TaskForm from "./TaskForm.svelte";

 let tasks = []

 function onAdd(evt) {
     const task = evt.detail;
     tasks = [task, ...tasks];
 }
</script>

<main>
    <h1>{appName}</h1>

    <TaskForm on:submit={onAdd}/>

    <table>
        <thead>
            <th>No.</th>
            <th>Name</th>
            <th>Due</th>
        </thead>
        <tbody>
            {#each tasks as task, i}
            <tr>
                <td>{i + 1}</td>
                <td>{task.name}</td>
                <td>
                    {task.dueDate}
                </td>
            </tr>
            {/each}
        </tbody>
    </table>

</main>

